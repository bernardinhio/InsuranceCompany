<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardElevation="8dp"
    app:cardCornerRadius="10dp"
    android:layout_marginTop="16dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:background="#FFFFFF">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <TextView
            android:id="@+id/tvMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24dp"
            android:textColor="#000000"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Gesundheitsimpuls 02/19\nStell dir heute mal den Wecker zum Schlafengehen."/>

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:layout_marginTop="8dp"
            android:textColor="#000000"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/tvMessage"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="Mehr zu gesundem Schlaf"/>

        <ImageView
            android:id="@+id/ivIcon"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:padding="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/tvTitle"
            tools:background="#B1B2B3"/>

        <TextView
            android:id="@+id/tvPermanent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:layout_marginTop="8dp"
            android:textColor="#027AD9"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/ivIcon"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="Permanent"/>

        <TextView
            android:id="@+id/tvPromptCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:layout_marginTop="8dp"
            android:textColor="#000000"
            android:background="#FCCEDE"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:textStyle="italic"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@id/ivIcon"
            app:layout_constraintStart_toEndOf="@id/tvPermanent"
            tools:text="ottonova"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>